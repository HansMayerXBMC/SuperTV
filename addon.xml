<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
    id="script.SuperTV"
	version="1.105.5"
	name="SuperTV"
	provider-name="HansMayer">

	<requires>
		<import addon="xbmc.python" version="2.0"/>
	</requires>

	<extension point="xbmc.python.script"
        defaultresolution="720p"
        defaultresolutionwide="720p"
		library="default.py"/>

	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<minversion>35647</minversion>
		<summary lang="en">Watch LiveTV on your XBMC</summary>
		<description lang="en">SuperTV enables you to watch TV streams from all over the world, with a comprehensive EPG.</description>
	</extension>
</addon>
